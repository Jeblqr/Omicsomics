    "language": "Python",
    "description": "Create interactive heatmaps using plotly",
    "version": "1.0.0",
    "author": "Built-in",
    "tags": ["visualization", "heatmap", "interactive", "plotly", "Python"],
    "inputs": [
      {
        "name": "matrix_file",
        "type": "file",
        "label": "Input Matrix",
        "required": true,
        "formats": ["csv"]
      }
    ],
    "outputs": [
      {
        "name": "heatmap",
        "type": "file",
        "label": "Interactive Heatmap",
