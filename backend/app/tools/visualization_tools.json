        "default": true
      },
      "show_rownames": {
        "type": "boolean",
        "label": "Show Row Names",
        "default": true
      },
      "show_colnames": {
        "type": "boolean",
        "label": "Show Column Names",
        "default": true
      },
      "color_scheme": {
        "type": "select",
        "label": "Color Scheme",
        "default": "RdBu",
        "options": ["RdBu", "RdYlBu", "Blues", "Reds", "Greens"]
      },
      "title": {
        "type": "string",
        "label": "Title",
        "default": "Heatmap"
      },
      "width": {
        "type": "number",
        "label": "Width (inches)",
        "default": 10
      },
      "height": {
        "type": "number",
        "label": "Height (inches)",
        "default": 10
      }
    },
    "script": "library(pheatmap)\n\nmat <- read.table('{{matrix_file}}', header=TRUE, row.names=1)\n\npdf('{{output_heatmap}}', width={{width}}, height={{height}})\npheatmap(mat, cluster_rows={{cluster_rows}}, cluster_cols={{cluster_cols}},\n         show_rownames={{show_rownames}}, show_colnames={{show_colnames}},\n         color=colorRampPalette(rev(RColorBrewer::brewer.pal(n=7, name='{{color_scheme}}')))(100),\n         main='{{title}}')\ndev.off()"
  },
